{
    "build": {
        "dockerfile": "Dockerfile"
    },
    "containerUser": "vscode",
    "remoteUser": "vscode",
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {},
        "ghcr.io/devcontainers-community/features/llvm:3": {
            "version": 18
        },
        "ghcr.io/devcontainers-extra/features/cmake:1": {
            "version": "3.31.4"
        },
        "ghcr.io/devcontainers/features/python:1": {}
    },
    "postCreateCommand": "./.devcontainer/postCreateCommand.sh",
    "mounts": [
        "source=${devcontainerId}-codex,target=/home/vscode/.codex,type=volume",
        "source=${devcontainerId}-config,target=/home/vscode/.config,type=volume"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "cmake.sourceDirectory": "/workspaces/yosupo-library/test",
                "C_Cpp.intelliSenseEngine": "disabled",
                "[cpp]": {
                    "editor.defaultFormatter": "llvm-vs-code-extensions.vscode-clangd"
                },
                "cmake.debugConfig": {
                    "type": "lldb",
                    "request": "launch",
                    "program": "${command:cmake.launchTargetPath}",
                    "args": [],
                    "cwd": "${workspaceFolder}"
                }
            },
            "extensions": [
                "llvm-vs-code-extensions.vscode-clangd",
                "vadimcn.vscode-lldb",
                "ms-vscode.cmake-tools",
                "github.vscode-github-actions",
                "redhat.vscode-yaml"
            ]
        }
    }
}